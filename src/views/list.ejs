<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>List</title>
  <style>
    html, body, div, p {
      margin: 0;
      padding: 0;
      font-size: 16px;
    }
    .note {
      display: flex;
      justify-content: space-between;
      padding: 5px;
      position: relative;
    }
    .note::after {
      content: '';
      display: block;
      position: absolute;
      left: 0;
      bottom: 0;
      width: 100%;
      height: 1px;
      background: #e8e8e8;
      transform: scaleY(0.5);
    }
    .icon {
      display: flex;
      justify-content: flex-end;
      align-items: center;
    }
    .icon > svg {
      width: 16px;
      height: 16px;
    }
  </style>
</head>
<body>
  <% list.forEach((note, index) => { %>
    <div class="note" data-id="<%= note.id %>">
      <div>
        <p style="font-size: 16px;"><%= note.title %></p>
        <p style="font-size: 8px;color: #c3c3c3;"><%= note.create_time %></p>
      </div>
      <div class="icon">
        <svg t="1578212824503" viewBox="0 0 1024 1024" version="1.1" xmlns="http://www.w3.org/2000/svg" p-id="937" width="200" height="200"><path d="M283.648 849.919l57.225 59.008 399.479-396.929-399.476-396.924-57.228 59.004 335.872 337.92z" p-id="938" fill="#cdcdcd"></path></svg>
      </div>
    </div>
  <% }) %>

  <script>
    document.querySelectorAll('.note').forEach(note => {
      note.addEventListener('click', (e) => {
        window.location.href = '/list/' + e.currentTarget.dataset.id
      })
    })
  </script>
</body>
</html>